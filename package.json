{
  "name": "chats-gpt",
  "version": "1.2.0",
  "main": "src/main.js",
  "description": "Multiple Chats GPT with support proxy http/https",
  "author": {
    "name": "Oxi",
    "email": "oxmix@me.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.oxi.chats-gpt",
    "productName": "ChatsGPT",
    "publish": [
      {
        "provider": "github",
        "owner": "oxmix",
        "repo": "chats-gpt"
      }
    ],
    "files": [
      "src/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "src/assets/AppIcon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "src/assets/IconCircle.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "src/assets/IconCircle.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^26.0.11"
  }
}
